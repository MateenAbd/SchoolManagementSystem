@{
    ViewData["Title"] = "Students";
}
<h2>Students</h2>
<p>JSON endpoints:</p>
<ul>
    <li><input type="checkbox" id="getStudentList"> <label for="getStudentList">GET /Student/GetStudentList</label></li>
    <li><input type="checkbox" id="getStudentById"> <label for="getStudentById">GET /Student/GetStudentById?studentId=1</label></li>
    <li><input type="checkbox" id="addStudent"> <label for="addStudent">POST /Student/AddStudent</label></li>
    <li><input type="checkbox" id="updateStudent"> <label for="updateStudent">PUT /Student/UpdateStudent</label></li>
    <li><input type="checkbox" id="deleteStudentById"> <label for="deleteStudentById">DELETE /Student/DeleteStudentById</label></li>
    <li><input type="checkbox" id="uploadPhoto"> <label for="uploadPhoto">POST /Student/UploadPhoto (form-data: studentId, file)</label></li>
    <li><input type="checkbox" id="uploadDocument"> <label for="uploadDocument">POST /Student/UploadDocument (form-data: studentId, description?, file)</label></li>
    <li><input type="checkbox" id="getStudentDocuments"> <label for="getStudentDocuments">GET /Student/GetStudentDocuments?studentId=1</label></li>
    <li><input type="checkbox" id="deleteStudentDocumentById"> <label for="deleteStudentDocumentById">DELETE /Student/DeleteStudentDocumentById (body: number documentId)</label></li>
    <li><input type="checkbox" id="addOrUpdateEnrollment"> <label for="addOrUpdateEnrollment">POST /Student/AddOrUpdateEnrollment (body: StudentEnrollmentDto)</label></li>
    <li><input type="checkbox" id="getEnrollmentByStudent"> <label for="getEnrollmentByStudent">GET /Student/GetEnrollmentByStudent?studentId=1</label></li>
</ul>




