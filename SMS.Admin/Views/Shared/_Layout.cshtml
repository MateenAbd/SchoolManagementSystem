@using System.Security.Claims
@{
    var isAuth = User?.Identity?.IsAuthenticated == true;
    var userName = User?.Identity?.Name ?? "Guest";
    var userId = User?.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "";
    var roles = string.Join(",", User?.Claims?.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value) ?? Array.Empty<string>());
    var isAdmin = User?.IsInRole("Admin") == true;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .page-container {
            padding-top: 70px;
        }

        .small-muted {
            font-size: .9rem;
            color: #666;
        }
    </style>
</head>
<body data-authenticated="@(isAuth ? "true" : "false")"
      data-username="@userName"
      data-user-id="@userId"
      data-roles="@roles">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">SMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Auth" ? "active" : "")" href="/Auth">Auth</a></li>
                    @if (isAdmin)
                    {
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Student" ? "active" : "")" href="/Student">Student</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admission" ? "active" : "")" href="/Admission">Admission</a></li>
                    }
                    <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Attendance" ? "active" : "")" href="/Attendance">Attendance</a></li>
                </ul>

                <div class="d-flex align-items-center text-white">
                    @if (!isAuth)
                    {
                        <span class="me-3">Status: <span class="badge bg-secondary">Guest</span></span>
                        <a class="btn btn-sm btn-outline-light" href="/Auth">Login</a>
                    }
                    else
                    {
                        <div class="me-3">
                            <div>Hello, <strong>@userName</strong></div>
                            <div class="small text-info">
                                Roles:
                                @if (string.IsNullOrWhiteSpace(roles))
                                {
                                    <span class="badge bg-warning text-dark">None</span>
                                }
                                else
                                {
                                    foreach (var r in roles.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge bg-info text-dark me-1">@r</span>
                                    }
                                }
                            </div>
                        </div>
                        <button class="btn btn-sm btn-danger" id="btnLogoutTop">Logout</button>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="container page-container">
        <div id="globalAlert" class="d-none"></div>
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="/js/script/common.js?v=1"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>